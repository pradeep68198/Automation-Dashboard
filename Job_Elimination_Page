       public void Create_New_JE_Action(){
    	
	    Click(Create_New_JE,"Create_New_JE");
	  
 	
       }
	    
	    
	    public void Existing_JE_Action(){
	    	
	    	 Click(Existing_JE,"Existing_JE");
	    	
	    }
	    
	    public void Contine_Button_Action(){
	    	
	    	 Click(Contine_Button,"Contine_Button");
	    	
	    }
	    
	    public  void New_JE_Dept_dropdown_Action(){
	    	
	    	
	    	
	    	 Click(New_JE_Dept_dropdown,"New_JE_Dept_dropdown");
	    	 
	    
	    	
	    }
	    
	    public void New_JE_Dept_search_Action(String value){
	    	
	    	enterText(New_JE_Dept_search,value,"New_JE_Dept_search");
	    	
	    }
	    
      public String New_JE_Dept_text_Action() {
	    	
	    	String name=Get_Text(New_JE_Dept_text,"New_JE_Dept_text");
	    	
	    	String[] name1=name.split("--");
	    	
	    	return name1[0].trim();
	    	
	    	
	    }
	    public void New_JE_Dept_select_Action(){
	    	
