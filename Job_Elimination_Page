	    }
	    
	    public void New_JE_Dept_owner_search_Action(String value) throws InterruptedException{
	    	
	    	enterText(New_JE_Dept_owner_search,value.trim(),"New_JE_Dept_owner_search");
	    	
	    	for(int i=0;i<=10;i++) {
	    	driver.findElement(New_JE_Dept_owner_search).sendKeys(Keys.ENTER);
	    	Thread.sleep(2000);
	    	if(!(isElementPresent(New_JE_Dept_owner_select1))) {
	    		break;
	    	
	    	}
	    	Thread.sleep(2000);
	    	}
	    	
	    }
	    
	    public void New_JE_Dept_owner_select_Action(){
	    	
	    	 Click(New_JE_Dept_owner_select,"New_JE_Dept_owner_select");
	    	
