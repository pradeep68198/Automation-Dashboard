package com.report.utilities;

import javax.swing.JFrame;
import javax.swing.JScrollPane;
import javax.swing.JTextArea;
import javax.swing.text.DefaultCaret;

public class Result_Console extends General_Wrapper{
	
public Result_Console(){
		
		
		frame1 = new JFrame("Result Console");
		frame1.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		Area = new JTextArea();
		frame1.add(new JScrollPane(Area, JScrollPane.VERTICAL_SCROLLBAR_AS_NEEDED, JScrollPane.HORIZONTAL_SCROLLBAR_NEVER));
		frame1.setSize(600, 400);
		frame1.setLocationRelativeTo(null);
		frame1.setVisible(true);
		DefaultCaret caret = (DefaultCaret)Area.getCaret();
		caret.setUpdatePolicy(DefaultCaret.ALWAYS_UPDATE);
	    
	    
	    
	}

}
